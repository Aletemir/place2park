<div class="card d-flex " style="width: 18rem;">
    <img src="{{ asset('uploads/' ~ parking.picture) }}" class="card-img-top" style="height: 50%"
         alt="{{ parking.title }}">
    <div class="card-body">
        <h3 class="card-title">{{ parking.title }}</h3>
        <div class="card-text">
            <div class="parking_price">{{ parking.price }} â‚¬/jour</div>
            <div class="parking_type">{{ parking.type.label }}</div>
