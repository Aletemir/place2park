<div class="card d-flex " style="width: 18rem;">
    <img src="{{ asset('uploads/' ~ parking.picture) }}" class="card-img-top" style="height: 50%"
         alt="{{ parking.title }}">
    <div class="card-body">
        <h3 class="card-title">{{ parking.title }}</h3>
        <div class="card-text">
            <div class="parking_price">{{ parking.price }} €/jour</div>
            <div class="parking_type">{{ parking.type.label }}</div>
            <div class="parking_city">{{ parking.city }} city</div>
            <div class="parking_district">{{ parking.district }} quartier</div>
        </div>

        <a href="{{ path('show_one_park_by_user', { 'id' : parking.id }) }}" class="btn btn-primary">{{ 'détail de l\'annonce'|upper }}</a>

    </div>
</div>
